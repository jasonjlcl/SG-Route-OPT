{
  "displayName": "sg-route-opt - Optimize latency slow runs detected",
  "documentation": {
    "content": "Optimize pipeline completion latency exceeded the configured warning threshold (`OPTIMIZE_LATENCY_WARN_SECONDS`). Investigate queue backlog and external dependency latency.",
    "mimeType": "text/markdown"
  },
  "userLabels": {
    "service": "__SERVICE_NAME__",
    "phase": "phase7",
    "signal": "optimize_latency",
    "severity": "warning"
  },
  "conditions": [
    {
      "displayName": "Slow optimize count > 1 in 10m",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"__SERVICE_NAME__\" AND metric.type=\"logging.googleapis.com/user/sg_route_opt_optimize_slow_count\"",
        "aggregations": [
          {
            "alignmentPeriod": "600s",
            "perSeriesAligner": "ALIGN_SUM",
            "crossSeriesReducer": "REDUCE_SUM",
            "groupByFields": [
              "resource.labels.service_name"
            ]
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 1,
        "duration": "0s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "combiner": "OR",
  "enabled": true,
  "alertStrategy": {
    "autoClose": "3600s"
  }
}
