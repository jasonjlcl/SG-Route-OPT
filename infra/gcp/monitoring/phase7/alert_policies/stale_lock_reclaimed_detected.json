{
  "displayName": "sg-route-opt - Pipeline stale lock reclaimed",
  "documentation": {
    "content": "A stale step lock was reclaimed (`PIPELINE_STALE_LOCK_RECLAIMED`). This indicates a worker timeout/crash scenario was recovered, but repeated events should be investigated.",
    "mimeType": "text/markdown"
  },
  "userLabels": {
    "service": "__SERVICE_NAME__",
    "phase": "phase7",
    "signal": "stale_lock",
    "severity": "warning"
  },
  "conditions": [
    {
      "displayName": "Stale lock reclaimed count > 1 in 10m",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"__SERVICE_NAME__\" AND metric.type=\"logging.googleapis.com/user/sg_route_opt_stale_lock_reclaimed_count\"",
        "aggregations": [
          {
            "alignmentPeriod": "600s",
            "perSeriesAligner": "ALIGN_SUM",
            "crossSeriesReducer": "REDUCE_SUM",
            "groupByFields": [
              "resource.labels.service_name"
            ]
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 1,
        "duration": "0s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "combiner": "OR",
  "enabled": true,
  "alertStrategy": {
    "autoClose": "3600s"
  }
}
