{
  "displayName": "Cloud Run sg-route-opt-api - 5xx Error Rate > 5%",
  "documentation": {
    "content": "Triggers when 5xx responses exceed 5% of total requests for 5 minutes on sg-route-opt-api.",
    "mimeType": "text/markdown"
  },
  "userLabels": {
    "service": "sg-route-opt-api",
    "severity": "warning"
  },
  "conditions": [
    {
      "displayName": "5xx error rate > 5% for 5m",
      "conditionThreshold": {
        "filter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"sg-route-opt-api\" AND metric.type=\"run.googleapis.com/request_count\" AND metric.labels.response_code_class=\"500\"",
        "aggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_RATE",
            "crossSeriesReducer": "REDUCE_SUM",
            "groupByFields": [
              "resource.labels.service_name"
            ]
          }
        ],
        "denominatorFilter": "resource.type=\"cloud_run_revision\" AND resource.labels.service_name=\"sg-route-opt-api\" AND metric.type=\"run.googleapis.com/request_count\"",
        "denominatorAggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_RATE",
            "crossSeriesReducer": "REDUCE_SUM",
            "groupByFields": [
              "resource.labels.service_name"
            ]
          }
        ],
        "comparison": "COMPARISON_GT",
        "thresholdValue": 0.05,
        "duration": "300s",
        "trigger": {
          "count": 1
        }
      }
    }
  ],
  "combiner": "OR",
  "enabled": true,
  "alertStrategy": {
    "autoClose": "1800s"
  }
}
